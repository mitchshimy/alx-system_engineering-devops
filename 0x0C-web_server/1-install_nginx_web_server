#!/usr/bin/env bash
# Script to install and configure Nginx to serve a "Hello World!" page.

# Exit on error
set -e

echo "ğŸ”§ Updating package list..."
apt-get update -y > /dev/null

# Check if nginx is already installed
if ! dpkg -s nginx > /dev/null 2>&1; then
    echo "ğŸŒ Installing nginx..."
    apt-get install nginx -y > /dev/null
else
    echo "âœ… Nginx already installed."
fi

# Create HTML content with Hello World!
echo "ğŸ“„ Writing Hello World! to index page..."
cat << 'EOF' > /var/www/html/index.nginx-debian.html
<!DOCTYPE html>
<html>
  <head>
    <title>Hello</title>
  </head>
  <body>
    Hello World!
  </body>
</html>
EOF

# Restart Nginx using 'service' (not systemctl)
echo "â™»ï¸ Restarting nginx..."
service nginx restart

echo "âœ… Nginx setup complete. Visit http://localhost or your server IP to verify."
